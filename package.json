{
  "name": "open-webui-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux AppImage"
  },
  "dependencies": {
    "get-port": "latest"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "build": {
    "appId": "com.openwebui.openwebuidesktop",
    "productName": "Open WebUI Desktop",
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "open-webui/icon.png"
    },
    "files": [
      "main.js",
      "package.json",
      "open-webui/**/*"
    ],
    "extraResources": [
      {
        "from": "open-webui",
        "to": "open-webui",
        "filter": "**/*"
      }
    ]
  }
}

